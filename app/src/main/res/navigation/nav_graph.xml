<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/splashFragment"
    android:id="@+id/main_nav_graph">
    <!--
        app:popUpTo="@id/splashFragment" : 지정한 스택을 지우고 이동
        app:popUpToInclusive="true" : popUpTo 로 지정한 스택까지 지울지 여부
    -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="jh.openweather.app.view.SplashFragment"
        tools:layout="@layout/fragment_splash"
        >

        <action
            android:id="@+id/action_splash_to_main"
            app:destination="@+id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="jh.openweather.app.view.main.MainFragment"
        tools:layout="@layout/fragment_main"
        >

        <action
            android:id="@+id/action_main_to_second"
            app:destination="@+id/secondFragment"
            />

    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="jh.openweather.app.view.second.SecondFragment"
        tools:layout="@layout/fragment_second"
        >

    </fragment>

</navigation>